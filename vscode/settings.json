{
    "window.zoomLevel": 0,
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 16.001,
    "terminal.integrated.fontFamily": "'Ubuntu Monospace Regular', 'DejaVu Sans Mono', Menlo, 'Droid Sans Mono', Monaco, 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.rulers": [
        80
    ],
    "editor.renderWhitespace": "boundary",
    "editor.scrollBeyondLastLine": false,
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.iconTheme": "vs-seti",
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/bazel-*/": true
    },
    "go.formatTool": "gofmt",
    "go.useLanguageServer": true,
    "go.toolsEnvVars": {
        "GO111MODULE": "on"
    },
    "go.toolsManagement.autoUpdate": true,
    "python.linting.enabled": false,
    "[dockerfile]": {
        "editor.formatOnSave": false
    },
    "html.format.enable": false,
    "window.titleBarStyle": "custom",
    "window.doubleClickIconToClose": false,
    "terminal.integrated.sendKeybindingsToShell": true,
    "extensions.ignoreRecommendations": true,
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false,
        "go": false
    },
    "diffEditor.codeLens": true,
    "git.blame.editorDecoration.enabled": true,
    "geminicodeassist.recitation.maxCitedLength": 0,
    "geminicodeassist.inlineSuggestions.enableAuto": true,
    "geminicodeassist.project": "${env:GEMINI_DEFAULT_PROJECT}",
}
