{
    "window.zoomLevel": 0.001,
    "editor.fontSize": 14,
    "terminal.integrated.fontSize": 14.001,
    "terminal.integrated.fontFamily": "'Ubuntu Monospace Regular', 'DejaVu Sans Mono', Menlo, 'Droid Sans Mono', Monaco, 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.rulers": [
        80
    ],
    "editor.renderWhitespace": "boundary",
    "editor.scrollBeyondLastLine": false,
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.iconTheme": "vs-seti",
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/bazel-*/": true
    },
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "go.toolsEnvVars": {
        "GO111MODULE": "on",
        "GOFLAGS": "-mod=vendor"
    },
    "python.linting.enabled": false,
    "[dockerfile]": {
        "editor.formatOnSave": false,
    }
}
